<?xml version="1.0" encoding="utf-8"?>
<header name="boost/compute/algorithm/remove_if.hpp">
  <namespace name="boost">
    <namespace name="compute">

      <!-- boost::compute::remove_if(first, last, predicate, queue) -->
      <function name="remove_if">
        <template>
          <template-type-parameter name="Iterator"/>
          <template-type-parameter name="UnaryPredicate"/>
        </template>

        <type>Iterator</type>

        <parameter name="first">
          <paramtype>Iterator</paramtype>
        </parameter>
        <parameter name="last">
          <paramtype>Iterator</paramtype>
        </parameter>
        <parameter name="predicate">
          <paramtype>UnaryPredicate</paramtype>
        </parameter>
        <parameter name="queue">
          <paramtype>command_queue &amp;</paramtype>
        </parameter>

        <description>
          <para>
            Removes each element for which <code>predicate</code> returns
            <code>true</code> in the range [<code>first</code>,
            <code>last</code>).
          </para>
          <para>
            See also: <functionname>remove()</functionname>
          </para>
        </description>
      </function>
    </namespace>
  </namespace>
</header>
