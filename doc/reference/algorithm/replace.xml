<?xml version="1.0" encoding="utf-8"?>
<header name="boost/compute/algorithm/replace.hpp">
  <namespace name="boost">
    <namespace name="compute">

      <!-- boost::compute::replace(first, last, old_value, new_value, queue) -->
      <function name="replace">
        <template>
          <template-type-parameter name="Iterator"/>
          <template-type-parameter name="T"/>
        </template>

        <type>void</type>

        <parameter name="first">
          <paramtype>Iterator</paramtype>
        </parameter>
        <parameter name="last">
          <paramtype>Iterator</paramtype>
        </parameter>
        <parameter name="old_value">
          <paramtype>const T&amp;</paramtype>
        </parameter>
        <parameter name="new_value">
          <paramtype>const T&amp;</paramtype>
        </parameter>
        <parameter name="queue">
          <paramtype>command_queue &amp;</paramtype>
        </parameter>

        <description>
          <para>
            Replaces each instance of <code>old_value</code> in the range
            [<code>first</code>, <code>last</code>) with
            <code>new_value</code>.
          </para>
        </description>
      </function>
    </namespace>
  </namespace>
</header>
