<?xml version="1.0" encoding="utf-8"?>
<header name="boost/compute/algorithm/reverse_copy.hpp">
  <namespace name="boost">
    <namespace name="compute">

      <!-- boost::compute::reverse_copy(first, last, result, queue) -->
      <function name="reverse_copy">
        <template>
          <template-type-parameter name="InputIterator"/>
          <template-type-parameter name="OutputIterator"/>
        </template>

        <type>OutputIterator</type>

        <parameter name="first">
          <paramtype>InputIterator</paramtype>
        </parameter>
        <parameter name="last">
          <paramtype>InputIterator</paramtype>
        </parameter>
        <parameter name="result">
          <paramtype>OutputIterator</paramtype>
        </parameter>
        <parameter name="queue">
          <paramtype>command_queue &amp;</paramtype>
        </parameter>

        <returns>
          An iterator pointing the end of the reversed range.
        </returns>

        <description>
          <para>
            Copies the values in the range [<code>first</code>,
            <code>last</code>) in reversed order to the range beginning at
            <code>result</code>.
          </para>
          <para>
            See also: <functionname>reverse()</functionname>
          </para>
        </description>
      </function>
    </namespace>
  </namespace>
</header>
