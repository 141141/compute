<?xml version="1.0" encoding="utf-8"?>
<header name="boost/compute/container/array.hpp">
  <namespace name="boost">
    <namespace name="compute">

      <!-- boost::compute::array<T, N> -->
      <class name="array">
        <purpose>A fixed size container</purpose>

        <template>
          <template-type-parameter name="T">
            <purpose>value type</purpose>
          </template-type-parameter>
          <template-nontype-parameter name="N">
            <type>size_t</type>
            <purpose>array size</purpose>
          </template-nontype-parameter>
        </template>

        <description>
          <para>
            See also: <classname>vector</classname>
          </para>
        </description>
      </class>
    </namespace>
  </namespace>
</header>
